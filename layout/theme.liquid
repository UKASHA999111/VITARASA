    <style>

        .popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 10000;
            opacity: 0;
            visibility: hidden;
            transition: opacity 0.3s ease, visibility 0.3s ease;
        }

        .popup-overlay.active {
            opacity: 1;
            visibility: visible;
        }

        .popup-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            overflow: hidden;
            max-width: 800px;
            width: 90%;
            max-height: 90vh;
            position: relative;
            display: flex;
            transform: scale(0.9);
            transition: transform 0.3s ease;
        }

        .popup-overlay.active .popup-container {
            transform: scale(1);
        }

        .popup-image {
            flex: 1;
            min-height: 300px;
            background: url('https://cdn.shopify.com/s/files/1/0951/8353/6411/files/BG_1.png?v=1751542512') center/cover;
            background-size: cover;
            background-position: center;
            position: relative;
          display:block !important;
        }

        .popup-image::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(255, 140, 0, 0.1), rgba(34, 197, 94, 0.1));
            pointer-events: none;
        }

        .popup-content {
            flex: 1;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
        }

        .close-button {
            position: absolute;
            top: 20px;
            right: 20px;
            background: none;
            border: none;
            font-size: 24px;
            cursor: pointer;
            color: #666;
            transition: color 0.2s ease;
            z-index: 1;
        }

        .close-button:hover {
            color: #333;
        }

        .popup-title {
            font-size: 32px;
            font-weight: 700;
            color: #333;
            margin-bottom: 20px;
            line-height: 1.2;
        }

        .popup-subtitle {
            font-size: 16px;
            color: #666;
            margin-bottom: 8px;
            line-height: 1.4;
        }

        .discount-text {
            color: #ff8c00;
            font-weight: 600;
        }

        /* Newsletter form styling - adapted from Get In Touch */
        .newsletter-form-wrapper {
            margin-top: 30px;
        }

        .newsletter-form .newsletter-input-group {
            display: flex;
            gap: 0;
            max-width: 100%;
