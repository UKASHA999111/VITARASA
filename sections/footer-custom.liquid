    </div>
  </div>

  <!-- Second Div - Copyright and Payment Methods -->
  <div class="footer__content-bottom">
    <div class="footer__content-bottom-wrapper page-width">
      <!-- Left: Copyright -->
      <div class="footer__copyright">
        <small class="copyright__content">
          &copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. {{ section.settings.copyright_text | default: 'All Rights Reserved' }}
        </small>
      </div>
      
      <!-- Right: Payment Icons -->
      <div class="footer__payment">
        <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
        {% if section.settings.payment_method_1 != blank or section.settings.payment_method_2 != blank or section.settings.payment_method_3 != blank or section.settings.payment_method_4 != blank or section.settings.payment_method_5 != blank or section.settings.payment_method_6 != blank %}
          <div class="footer__payment-icons">
            {% for i in (1..8) %}
              {% assign payment_method = 'payment_method_' | append: i %}
              {% if section.settings[payment_method] != blank %}
                {{ section.settings[payment_method] | image_url: width: 50 | image_tag: class: 'payment-icon' }}
              {% endif %}
            {% endfor %}
          </div>
        {% else %}
          <div class="footer__payment-icons">
            {%- for type in shop.enabled_payment_types -%}
              {{ type | payment_type_img_tag: class: 'payment-icon' }}
            {%- endfor -%}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

<style>

.custom-footer {
  {% if section.settings.background_image != blank %}
    background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  {% endif %}
  background-color: {{ section.settings.background_color | default: '#1a1a1a' }};
    color: {{ section.settings.text_color | default: '#ffffff' }};
    padding: {{ section.settings.padding_top | default: 60 }}px 0 0;
    position: relative;
}

  
  
  .custom-footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, {{ section.settings.overlay_opacity | default: 0.7 }});
    z-index: 1;
  }
  
  .footer__content-top,
  .footer__content-bottom {
    position: relative;
    z-index: 2;
  }
  
  /* 5 Column Grid Layout - Each block 20% width */
  .footer-block-grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 40px;
    margin-bottom: 60px;
  }
  
  .footer-block {
    width: 100%;
  }
  
  .footer-block__heading {
    font-size: {{ section.settings.heading_font_size | default: 18 }}px;
    font-weight: 600;
    margin-bottom: 20px;
    color: {{ section.settings.heading_color | default: '#ffffff' }};
    text-transform: {{ section.settings.heading_transform | default: 'none' }};
  }
  
  .footer__description {
    font-size: {{ section.settings.description_font_size | default: 14 }}px;
    line-height: 1.6;
    margin-bottom: 20px;
    color: {{ section.settings.text_color | default: '#cccccc' }};
  }
  
  .footer__logo {
    max-width: {{ section.settings.logo_width | default: 120 }}px;
    margin-bottom: 15px;
  }
  
  /* Menu Links Styling */
  .footer-block__details-content {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .list-social {
    justify-content: start !important;
}
  .footer-block__details-content li {
    margin-bottom: 12px;
  }
  .list-social__link {

    padding: 10px !important;

}
  
  .footer-block__details-content a {
    color: {{ section.settings.link_color | default: '#cccccc' }};
    text-decoration: none;
    font-size: {{ section.settings.link_font_size | default: 14 }}px;
    transition: color 0.3s ease;
    display: block;
  }
  
  .footer-block__details-content a:hover {
    color: {{ section.settings.link_hover_color | default: '#ffffff' }};
  }
  
  /* Social Media Icons */
  .footer__list-social {
    display: flex;
    gap: 1px;
    margin: 20px 0 0;
    list-style: none;
    padding: 0;
  }
  
  .list-social__link {
    color: {{ section.settings.social_icon_color | default: '#ffffff' }};
    font-size: 20px;
    transition: color 0.3s ease;
  }
  
  .list-social__link:hover {
    color: {{ section.settings.social_icon_hover_color | default: '#4CAF50' }};
  }
  
  .list-social__link .icon {
    width: 20px;
    height: 20px;
  }
  
  /* Mobile App Buttons - Inline with space between */
  .mobile-app-buttons {
    display: flex;
    gap: 10px;
    flex-direction: row;
  }
  
  .mobile-app-link {
    display: inline-block;
  }
  
  .app-button-img {
    max-width: 130px;
    height: auto;
    transition: transform 0.3s ease;
  }
  
  .mobile-app-link:hover .app-button-img {
    transform: scale(1.05);
  }
  
  /* Second Div - Bottom Section */
  .footer__content-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: 30px 0;
  }
  
  .footer__content-bottom-wrapper {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }
  
  /* Left: Copyright */
  .footer__copyright {
    flex: 1;
  }
  
  .copyright__content {
    color: {{ section.settings.copyright_color | default: '#999999' }};
    font-size: {{ section.settings.copyright_font_size | default: 12 }}px;
    margin: 0;
  }
  
  /* Right: Payment Icons */
  .footer__payment {
    flex-shrink: 0;
  }
  
  .footer__payment-icons {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    align-items: center;
  }
  
  .payment-icon {
    height: 30px;
    width: auto;
    border-radius: 4px;
  }
  
  /* Responsive Design */
  @media screen and (max-width: 1199px) {
    .footer-block-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 30px;
    }
    
    .footer-block:nth-child(4),
    .footer-block:nth-child(5) {
      grid-column: span 1;
    }
  }
  
  @media screen and (max-width: 989px) {
    .footer-block-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 30px;
    }
  }
  
  @media screen and (max-width: 749px) {
    .footer-block-grid {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .footer__content-bottom-wrapper {
      flex-direction: column;
      text-align: center;
      gap: 20px;
    }
    
    .mobile-app-buttons {
      align-items: center;
    }
    
    .footer__payment-icons {
      justify-content: center;
    }
  }
  
  /* Desktop specific - ensure 5 columns stay inline */
  @media screen and (min-width: 1200px) {
    .footer-block-grid {
      grid-template-columns: repeat(5, 1fr);
    }
  }
</style>
