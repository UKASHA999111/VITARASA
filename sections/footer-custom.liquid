      <!-- 2nd Block: Menu Block 1 (20% width) -->
      <div class="footer-block footer-block--menu">
        {% if section.settings.menu_1_heading != blank %}
          <h2 class="footer-block__heading">{{ section.settings.menu_1_heading }}</h2>
        {% endif %}
        {% if section.settings.menu_1 != blank %}
          <ul class="footer-block__details-content list-unstyled" role="list">
            {% for link in linklists[section.settings.menu_1].links %}
              <li>
                <a href="{{ link.url }}" class="link link--text list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- 3rd Block: Menu Block 2 (20% width) -->
      <div class="footer-block footer-block--menu">
        {% if section.settings.menu_2_heading != blank %}
          <h2 class="footer-block__heading">{{ section.settings.menu_2_heading }}</h2>
        {% endif %}
        {% if section.settings.menu_2 != blank %}
          <ul class="footer-block__details-content list-unstyled" role="list">
            {% for link in linklists[section.settings.menu_2].links %}
              <li>
                <a href="{{ link.url }}" class="link link--text list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- 4th Block: Menu Block 3 (20% width) -->
      <div class="footer-block footer-block--menu">
        {% if section.settings.menu_3_heading != blank %}
          <h2 class="footer-block__heading">{{ section.settings.menu_3_heading }}</h2>
        {% endif %}
        {% if section.settings.menu_3 != blank %}
          <ul class="footer-block__details-content list-unstyled" role="list">
            {% for link in linklists[section.settings.menu_3].links %}
              <li>
                <a href="{{ link.url }}" class="link link--text list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}">
                  {{ link.title }}
                </a>
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </div>

      <!-- 5th Block: Download Mobile Apps (20% width) -->
      <div class="footer-block footer-block--mobile-apps">
        <h2 class="footer-block__heading">{{ section.settings.mobile_apps_heading | default: 'Download Mobile App' }}</h2>
        <div class="mobile-app-buttons">
          {% if section.settings.app_store_image != blank and section.settings.app_store_url != blank %}
            <a href="{{ section.settings.app_store_url }}" class="mobile-app-link" target="_blank">
              {{ section.settings.app_store_image | image_url: width: 150 | image_tag: alt: 'Download on App Store', class: 'app-button-img' }}
            </a>
          {% endif %}
          {% if section.settings.google_play_image != blank and section.settings.google_play_url != blank %}
            <a href="{{ section.settings.google_play_url }}" class="mobile-app-link" target="_blank">
              {{ section.settings.google_play_image | image_url: width: 150 | image_tag: alt: 'Get it on Google Play', class: 'app-button-img' }}
            </a>
          {% endif %}
        </div>
