<style>
.product-tabs-section {
  padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
  background-color: {{ section.settings.section_background_color }};
}

.product-tabs-section .container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 15px;
}

/* Tab Navigation */
.tabs-navigation {
  display: flex;
  border-bottom: 2px solid {{ section.settings.tab_border_color }};
  margin-bottom: 40px;
  justify-content: center;
}

.tab-button {
  background: none;
  border: none;
  padding: 15px 30px;
  font-size: {{ section.settings.tab_font_size }}px;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  border-bottom: 3px solid transparent;
  margin-bottom: -2px;
}

.tab-button:hover {
  color: {{ section.settings.active_tab_color }} !important;
}

.tab-button.active {
  color: {{ section.settings.active_tab_color }} !important;
  border-bottom-color: {{ section.settings.active_tab_border_color }} !important;
}

/* Tab Content */
.tab-content {
  display: none;
}

.tab-content.active {
  display: block;
}

.row {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -15px;
}

.col-md-6 {
  flex: 0 0 50%;
  max-width: 50%;
  padding: 0 15px;
}

.col-md-12 {
  flex: 0 0 100%;
  max-width: 100%;
  padding: 0 15px;
}

/* Descriptions Tab Styles */
.product-description-content {
  padding-right: 30px;
}

.product-description {
  margin-bottom: 25px;
  line-height: 1.6;
}

.product-features {
  list-style: none;
  padding: 0;
  margin: 0;
}

.product-features li {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
  line-height: 1.5;
}

.feature-icon {
  margin-right: 12px;
  font-weight: bold;
  font-size: 16px;
}

.features-blocks-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.feature-block {
  padding: 25px 20px;
  text-align: center;
  border: 1px solid #f0f0f0;
  transition: all 0.3s ease;
}

.feature-block:hover {
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}

.feature-icon-container {
  width: 60px;
  height: 60px;
  margin: 0 auto 15px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.feature-icon-image,
.feature-icon-svg,
.feature-icon-text {
  max-width: 100%;
  max-height: 100%;
}

.feature-title {
  margin: 0 0 10px;
  font-weight: 600;
  line-height: 1.3;
}

.feature-description {
  margin: 0;
  line-height: 1.5;
}

/* Additional Information Tab Styles */
.product-specs-content {
  padding-right: 30px;
}

.specs-table {
  width: 100%;
}

.spec-row {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: {{ section.settings.additional_row_padding }}px 0;
  border-bottom: 1px solid {{ section.settings.additional_border_color }};
}

.spec-row:last-child {
  border-bottom: none;
}

.spec-label {
  font-weight: 500;
  flex: 0 0 auto;
  margin-right: 20px;
  min-width: 120px;
}

.spec-value {
  flex: 1;
  text-align: right;
  word-break: break-word;
}

.tag-item {
  display: inline-block;
  padding: 4px 8px;
  margin: 2px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 500;
}

.availability-status {
  font-weight: 500;
  text-transform: capitalize;
}

/* Customer Feedback Tab Styles */
.customer-feedback-content {
  max-width: 1200px;
  margin: 0 auto;
}

.review-block {
  border: 1px solid #f0f0f0;
}

.review-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.review-rating .star {
  font-size: 18px;
  margin-right: 2px;
}

.review-meta {
  font-size: 14px;
}

.review-content {
  line-height: 1.6;
}

/* Responsive Design */
@media (max-width: 768px) {
  .col-md-6 {
    flex: 0 0 100%;
    max-width: 100%;
  }
  .product-tabs-section {
    padding: 10px 0 60px;

}
  
  .product-description-content,
  .product-specs-content {
    padding-right: 0;
    margin-bottom: 30px;
  }
  
  .features-blocks-container {
    grid-template-columns: 1fr 1fr;;
  }
  
  .spec-row {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .spec-label {
    margin-bottom: 5px;
    margin-right: 0;
  }
  
  .spec-value {
    text-align: left;
  }
  
  .tabs-navigation     {
  flex-direction: row;
        gap: 20px;
        justify-content: center;
        text-align: center;
        align-items: center;
    }
  
  .tab-button {
    text-align: center;
    padding: 12px 0;
        font-size: 14px;
  }
  
  .review-header {
    flex-direction: column;
    align-items: flex-start;
  }
  
  .review-meta {
    margin-top: 10px;
  }
}

@media (max-width: 480px) {
  .features-blocks-container {
    gap: 15px;
  }
  
  .feature-block {
    padding: 20px 15px;
  }
  
  .feature-icon-container {
    width: 50px;
    height: 50px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const tabButtons = document.querySelectorAll('.tab-button');
  const tabContents = document.querySelectorAll('.tab-content');
  
  tabButtons.forEach(button => {
    button.addEventListener('click', function() {
      const targetTab = this.getAttribute('data-tab');
      
      // Remove active class from all buttons and contents
      tabButtons.forEach(btn => {
        btn.classList.remove('active');
        btn.style.color = '{{ section.settings.inactive_tab_color }}';
        btn.style.borderBottomColor = 'transparent';
      });
      
      tabContents.forEach(content => {
        content.classList.remove('active');
      });
      
      // Add active class to clicked button and corresponding content
      this.classList.add('active');
      this.style.color = '{{ section.settings.active_tab_color }}';
      this.style.borderBottomColor = '{{ section.settings.active_tab_border_color }}';
      
      document.getElementById(targetTab).classList.add('active');
    });
  });
});
</script>
