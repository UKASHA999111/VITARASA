<div class="testimonial-section">
  {% if section.settings.show_decorative_elements %}
    <div class="decorative-leaf leaf-top-right"></div>
    <div class="decorative-leaf leaf-bottom-left"></div>
  {% endif %}
  
  <div class="testimonial-container">
    <div class="testimonial-header">
      {% if section.settings.badge_text != blank %}
        <div class="testimonial-badge">{{ section.settings.badge_text }}</div>
      {% endif %}
      {% if section.settings.section_title != blank %}
        <h2 class="testimonial-title">{{ section.settings.section_title }}</h2>
      {% endif %}
    </div>

    <div class="testimonial-carousel">
      {% if section.settings.show_arrows %}
        <button class="carousel-controls carousel-prev" onclick="moveCarousel(-1)">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
          </svg>
        </button>
        <button class="carousel-controls carousel-next" onclick="moveCarousel(1)">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
            <path d="M4.646 1.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708L10.293 8 4.646 2.354a.5.5 0 0 1 0-.708z"/>
          </svg>
        </button>
      {% endif %}

      <div class="testimonial-track" id="testimonialTrack">
        {% for block in section.blocks %}
          <div class="testimonial-card" {{ block.shopify_attributes }}>
            {% if section.settings.show_quote_image and section.settings.quote_image != blank %}
              <img src="{{ section.settings.quote_image | img_url: 'master' }}" 
                   alt="Quote" 
                   class="testimonial-quote-image">
            {% endif %}
            
            {% if block.settings.testimonial_text != blank %}
              <p class="testimonial-text">{{ block.settings.testimonial_text }}</p>
            {% endif %}

            <div class="testimonial-author">
              {% if block.settings.author_image != blank %}
                <img src="{{ block.settings.author_image | img_url: '100x100' }}" 
                     alt="{{ block.settings.author_name }}" 
                     class="author-avatar">
              {% else %}
                <div class="author-avatar" style="background: #f0f0f0;"></div>
              {% endif %}
              
              <div class="author-info">
                {% if block.settings.author_name != blank %}
                  <h4>{{ block.settings.author_name }}</h4>
                {% endif %}
                {% if block.settings.author_title != blank %}
                  <p>{{ block.settings.author_title }}</p>
                {% endif %}
              </div>
               <div class="testimonial-rating">
                {% assign rating = block.settings.rating | default: 5 %}
                {% for i in (1..5) %}
                  <span class="star">{% if i <= rating %}★{% else %}☆{% endif %}</span>
                {% endfor %}
              </div>
            </div>

            {% if section.settings.show_ratings %}
             
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>

    {% if section.settings.show_dots %}
      <div class="carousel-dots">
        {% for block in section.blocks %}
          <div class="dot {% if forloop.first %}active{% endif %}" 
               onclick="goToSlide({{ forloop.index0 }})"></div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

<script>
  let currentSlide = 0;
  const totalSlides = {{ section.blocks.size }};
  const slidesToShow = window.innerWidth <= 768 ? 1 : window.innerWidth <= 1024 ? 2 : 3;
  const maxSlides = Math.max(0, totalSlides - slidesToShow);

  function moveCarousel(direction) {
    currentSlide += direction;
    
    if (currentSlide < 0) {
      currentSlide = maxSlides;
    } else if (currentSlide > maxSlides) {
      currentSlide = 0;
    }
    
    updateCarousel();
  }

  function goToSlide(slideIndex) {
    currentSlide = Math.min(slideIndex, maxSlides);
    updateCarousel();
  }

  function updateCarousel() {
    const track = document.getElementById('testimonialTrack');
    const cardWidth = track.children[0].offsetWidth + 30; // including gap
    const translateX = -(currentSlide * cardWidth);
    
    track.style.transform = `translateX(${translateX}px)`;
    
    // Update dots
    const dots = document.querySelectorAll('.dot');
    dots.forEach((dot, index) => {
      dot.classList.toggle('active', index === currentSlide);
    });
  }

  // Auto-play functionality
  {% if section.settings.autoplay %}
    let autoplayInterval;
    
    function startAutoplay() {
      autoplayInterval = setInterval(() => {
        moveCarousel(1);
      }, {{ section.settings.autoplay_speed | default: 5000 }});
    }
    
    function stopAutoplay() {
      clearInterval(autoplayInterval);
    }
    
    // Start autoplay on load
    startAutoplay();
    
    // Pause on hover
    const carousel = document.querySelector('.testimonial-carousel');
    carousel.addEventListener('mouseenter', stopAutoplay);
    carousel.addEventListener('mouseleave', startAutoplay);
  {% endif %}

  // Handle window resize
  window.addEventListener('resize', () => {
    updateCarousel();
  });

  // Touch/swipe support for mobile
  let startX = 0;
  let currentX = 0;
  let isDragging = false;

  const carousel = document.querySelector('.testimonial-carousel');
  
  carousel.addEventListener('touchstart', (e) => {
    startX = e.touches[0].clientX;
    isDragging = true;
  });
  
  carousel.addEventListener('touchmove', (e) => {
    if (!isDragging) return;
    currentX = e.touches[0].clientX;
  });
  
  carousel.addEventListener('touchend', () => {
    if (!isDragging) return;
    isDragging = false;
    
    const diffX = startX - currentX;
    if (Math.abs(diffX) > 50) {
      if (diffX > 0) {
        moveCarousel(1);
      } else {
        moveCarousel(-1);
      }
    }
  });
</script>
